{
  "compilerOptions": {
    "outDir": "dist",
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": false,
    "module": "commonjs",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "stripInternal": true,
    "noEmitHelpers": false,
    "target": "es2017",
    "types": [
      "node",
      "mocha"
    ],
    "lib": [
      "es2017"
    ],
    "experimentalDecorators": true,
    "newLine": "LF"
  },
  "exclude": [
    "dist",
    "node_modules",
    "**/*.d.ts"
  ]
}